echo ""
arch-chroot /mnt /bin/bash -c "systemctl start dhcpcd NetworkManager"
echo ""
echo "noipv6rs" >> /mnt/etc/dhcpcd.conf
echo "noipv6" >> /mnt/etc/dhcpcd.conf
echo ""
