arch-chroot /mnt /bin/bash -c "pacman -Syu --noconfirm"
arch-chroot /mnt /bin/bash -c "pacman -Syu --noconfirm"
echo ""
echo ""
arch-chroot /mnt /bin/bash -c "sudo -u $username alsi -l"
echo ""
