	arch-chroot /mnt /bin/bash -c "systemctl start --user wireplumber.service"
	arch-chroot /mnt /bin/bash -c "systemctl start wireplumber.service"
	arch-chroot /mnt /bin/bash -c "pactl info"

  ;;



  "Ninguno")
	echo "" 

  ;;


esac

}






installaur () {

echo -e ""
echo -e "\t\t| Instalando AUR - Arch User Repository |"
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' _
echo -e ""

	case $aur in

  "yay-(Terminal)")
	echo "" 
	echo "Se esta instalando AUR Yay:" 
	echo "" 
	arch-chroot /mnt /bin/bash -c "sudo -u $username yay -Syu --noeditmenu --noconfirm --needed"

  ;;


  "paru-(Terminal)")
	echo "" 
	echo "Se esta instalando AUR Paru:" 
	echo "" 
	arch-chroot /mnt /bin/bash -c "sudo -u $username yay -S paru-bin --noconfirm --needed"

  ;;

  "pamac-(Graphical)")
	echo "" 
	echo "Se esta instalando AUR Pamac Gráfico:" 
	echo "" 

	arch-chroot /mnt /bin/bash -c "sudo -u $username yay -S pamac-aur --noconfirm --needed"
	arch-chroot /mnt /bin/bash -c "sudo -u $username yay -S libpamac-aur --noconfirm --needed"
	arch-chroot /mnt /bin/bash -c "sudo -u $username yay -S archlinux-appstream-data-pamac --noconfirm --needed"

  ;;


  "Octopi-(Graphical)")
	echo "" 
	echo "Se esta instalando AUR Octopi Gráfico:" 
	echo "" 

	arch-chroot /mnt /bin/bash -c "sudo -u $username yay -S octopi --noconfirm --needed"

  ;;


  "Ninguno")
	echo "" 
	echo "Se esta eliminando el asistente AUR:" 
	echo "" 

	arch-chroot /mnt /bin/bash -c "pacman -R yay-bin --noconfirm"


  ;;

esac

}





